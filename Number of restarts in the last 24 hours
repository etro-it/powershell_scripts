# Define the time range (last 24 hours)
$startTime = (Get-Date).AddDays(-1)

# Get the count of Event ID 6009 occurrences in the System log within the last 24 hours
$eventCount = Get-WinEvent -FilterHashtable @{LogName='System'; Id=6009; StartTime=$startTime} | Measure-Object | Select-Object -ExpandProperty Count

# Display the result
Write-Host "Number of Event ID 6009 occurrences in the last 24 hours: $eventCount"

# Check if count exceeds 2
if ($eventCount -gt 2) {
    Write-Host "There have been more than 2 restarts in the last 24 hours, exiting script."
    exit
}

Write-Host "There have been fewer than 3 reboots in the last 24 hours so a restart will commence shortly..."
